	function Validate(name,tarjeta,expy,expm,cvc) {
		
		var cvc = $("#cardcvc").val();


		if (Conekta.card.validateNumber(tarjeta)) {
			if (Conekta.card.validateExpirationDate(expm,expy)) {
				if (Conekta.card.validateCVC(cvc)) {
						Conekta.card.getBrand(tarjeta);
						tokparams(tarjeta,name,expy,expm,cvc);
				} else {
					alert("POR FAVOR INSERTA O COMPRUEBA TU CODIGO DE SEGURIDAD CVC");
				}
			} else {
				alert("LA FECHA DE EXPIRACION NO ES VALIDA");
			}
		} else {
			alert("EL NUMERO DE TARJERTA ES INVALIDO");
		}

	}
	
	function tokparams(tarjeta,name,expy,expm,cvc) {
		tokenParams = {
		  "card": {
		    "number": tarjeta,
		    "name": name,
		    "exp_year": expy,
		    "exp_month": expm,
		    "cvc": cvc,
		  	}
		};
		return tokenParams;
	}

	var successResponseHandler = function(token) {
	  	console.log(token);
	  	var $form = $("#card-form");
    	//Inserta el token_id en la forma para que se envíe al servidor
     	$form.append($('<input type="hidden" name="conektaTokenId" id="conektaTokenId">').val(token.id));
     	// $form.append($('<input type="hidden" name="conektaTokenId">').val(token.id));
   		$form.get(0).submit(); //Hace submit
	};

	var errorResponseHandler = function(error) {
	  	console.log(error);
	};

	function execute(tokenParams,successResponseHandler,errorResponseHandler){
		var r = Conekta.Token.create(tokenParams, successResponseHandler, errorResponseHandler);
		return r;
	}

	$(document).ready(function(){
		$(".startPay").submit(function(e){
			e.preventDefault();
			// console.log(tokenParams);
			// $form.find("button").prop("disabled", true);
			Validate(name,tarjeta,expy,expm,cvc);
			var r  = execute(tokenParams,successResponseHandler,errorResponseHandler);
			
		});
	});


</script>